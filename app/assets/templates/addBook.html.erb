
<div class="container">
  <div class="col-xs-3"></div>
  <div class="col-xs-6 thumbnail">
    <h3 class="text-center">ADD NEW BOOK</h3>
   <form name="addBookForm" novalidate role="form"
    ng-submit="addBook()" class="well form-horizontal" enctype="multipart/form-data"> 
   <div class="form-group">
      <label>Title</label><input type="text" name="name"
      class="form-control" ng-model="book.name"  required>
      <!-- <div ng-messages="addBookForm.bookTitle.$error" style="color:maroon" role="alert">
        <p ng-message="minlength">Your name is too short.</p>
        <p ng-message="maxlength">Your name is too long.</p>
        <p ng-message="required">Your name is required.</p>
        <p ng-message="pattern">enter a proper name</p>
     </div> -->
    </div>
    <div class="form-group">
      <label>Price</label> <input type="text" name="price"
      class="form-control" ng-model="book.price" ng-minlength="2"
      ng-maxlength="8" ng-pattern="/^\d{1,6}(?:\.\d{0,2})?$/" required>
     <!--  <ng-messages for="addBookForm.bookPrice.$error" style="color:maroon" role="alert">
      <ng-message when="required">price is required.</ng-message> 
      <ng-message when="minlength">price is too short</ng-message>
      <ng-message when="pattern"> not a valid price</ng-message> 
   </ng-messages> -->
  </div>
   <div class="form-group">
   <label>Category</label>
   
    <select name="lang" ng-model="book.lang" class="form-control"  required>
    <option ng-repeat="cat in category" value="{{cat.name}}">{{cat.name}}</option>
    </select>
    <!-- <div ng-messages="addBookForm.bookLang.$error" style="color:maroon" role="alert">
     <p ng-message="required">Select one from category </p>
      
    </div> -->
  </div>
  <div class="form-group">
   <label>Publication Date</label><input type="text"
    class="form-control" name="pubdate" ng-model="book.pubdate"
     required>
     <!-- ng-pattern="/^(\d{2})\/(\d{2})\/(\d{4})$/" -->
   <!--  <div ng-messages="addBookForm.bookDate.$error" style="color:maroon" role="alert">
     <p ng-message="required">Date is required.</p>
      <p ng-message="pattern">Date format should be mm/dd/yyyy.</p>
    </div> -->
  </div>
  <div class="form-group">
   <label>Quantity</label><input type="text"
    class="form-control" name="quantity" ng-model="book.quantitty"
     required>
     <!-- ng-pattern="/^(\d{2})\/(\d{2})\/(\d{4})$/" -->
   <!--  <div ng-messages="addBookForm.bookDate.$error" style="color:maroon" role="alert">
     <p ng-message="required">Date is required.</p>
      <p ng-message="pattern">Date format should be mm/dd/yyyy.</p>
    </div> -->
  </div>
   <div class="form-group">
    <label>Image</label> <input type="file" name="avatar" file-model="fileModel" class="form-control" onchange="angular.element(this).scope().setFile(this)"> 
    <div>book cover: {{fileModel}} name : {{book.name}}</div>  
   
  </div> 
  
  <div class="form-group">
    <div class="col-xs-6">
          <input type="submit" class="btn btn-primary form-control " value="Add Book" > 
    </div>
    <div class="col-xs-6">
      <input type="reset" class="btn btn-danger form-control" value="Cancel">
    </div>
  </div>
</form> 
</div>
<div class="col-xs-3"></div>
</div>

