<div class="container-fluid">
  <div class="login-box col-xs-4 pull-center">
    <h2 class="text-center login-title">Log in to your Biblet!</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
        <%= f.email_field :email, autofocus: true, :class => "form-control email-field",:placeholder => "Enter Your Email"%>
    </div>
    <div class="form-group">
       <%= f.password_field :password, autocomplete: "off",:class => "form-control pwd-field",:placeholder => "password" %>
    </div>
    <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me%>
      <%= f.label :remember_me %>
    </div>
    <% end -%>
    <div class="form-group text-center">
      <%= f.submit "Log in ", :class => "btn btn-small btn-default" %>
    </div>
    <% end %>
    <div class="text-center">
    <%= render "devise/shared/links"%>
    </div>
  </div>
</div>