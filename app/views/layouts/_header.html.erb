<nav class=" navbar navbar-inverse header-nav">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#head">
        <span>
         <%=image_tag("logo.png", alt: "Example Image" , :class => "img-rounded logo")%>
       </span>
     </a>
    </div>
    <div class="col-md-4 pull-right header-log-div">
      <% if !current_user %>
      <div class="col-md-3">
        <a data-toggle="modal" data-target="#login-popup">Login</a>
        <!-- Modal -->
        <div class="modal fade" id="login-popup" role="dialog">
          <div class="modal-dialog">
            <!-- Modal content-->
            <div class="">
              <div class=" modal-content login-box col-xs-8 pull-center">
                <button type="button" class="close pull-right" data-dismiss="modal">&times;</button>
                <h2 class="text-center login-title">Log in to your Biblet!</h2>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, :class => "form-control email-field",:placeholder => "Enter Your Email"%>
                </div>
                <div class="form-group">
                 <%= f.password_field :password, autocomplete: "off",:class => "form-control pwd-field",:placeholder => "password" %>
               </div>
               <% if devise_mapping.rememberable? -%>
               <div class="form-group">
                <%= f.check_box :remember_me%>
                <%= f.label :remember_me %>
              </div>
              <% end -%>
              <div class="form-group text-center">
                <%= f.submit "Log in ", :class => "btn btn-small btn-default" %>
              </div>
              <% end %>
            </div>
           </div>
          </div>
        </div>
        <!-- modal end here -->
      </div>
       <div class="col-md-9">
        <div class="row">
          <%= link_to "Join Us", new_registration_path(resource_name) %><br/>
          <label>(Not yet a memeber ?)</label>
        </div>
      </div>
      <%else%>
        <div class="col-md-4 pull-right">
          <div class="row">
            <%= link_to "Log Out", destroy_user_session_path %><br/>
          </div>
        </div>
        <div class="col-md-4 pull-right ">
          <div class="row">
            <%= link_to "View List","/#carts"  %><br/>
          </div>
        </div>

      <%end%>
    </div>
     <% if current_user %>
    <ul class="nav navbar-nav">
      <li><i class="fa fa-home"></i><a href="#home">Home</a></li>
      <li><i class="fa fa-home"></i><a href="#gallery">Gallery</a></li>
      <li><i class="fa fa-shield"></i><a href="#addBook">Add Book</a></li>
      <%if current_user.try(:admin?)%>
      <li><i class="fa fa-comment"></i><a href="#tableView">Manage</a></li>
      <%end%>
    </ul>
      <%end%>
  </div>
</nav>

